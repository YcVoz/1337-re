class Solution {
public:
    vector<vector<int>> spiralMatrixIII(int rows, int cols, int rStart, int cStart) {
        int count = 1;
        int next_direction = 0;
        int total_step_length = 1;
        int now_step_length = 1;
        int now_r = rStart;
        int now_c = cStart;
        int len = rows*cols;
        vector<vector<int>> ret(rows*cols, vector<int>(2, -1));
        ret[0][0] = now_r;
        ret[0][1] = now_c;
        while(count<len){
            switch(next_direction){
                case 0:
                now_c++;
                now_step_length--;
                break;
                case 1:
                now_r ++;
                now_step_length--;
                break;
                case 2:
                now_c --;
                now_step_length--;
                break;
                case 3:
                now_r --;
                now_step_length--;
                break;
                default:
                return ret;
            }
            if(now_r>=0 && now_c>=0 && now_r<rows && now_c<cols){
                ret[count][0] = now_r;
                ret[count++][1] = now_c;
            }
            if(now_step_length==0){
                total_step_length+=next_direction&1;
                now_step_length = total_step_length;
                next_direction += 1;
                next_direction %= 4;
            }

        }
        return ret;
    }
};
